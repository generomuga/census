            <LinearLayout
                android:id="@+id/linearLayoutResidency"
                android:background="@drawable/edittext_round"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="Household Condition"
                    android:textColor="#fff"
                    android:textStyle="bold"/>

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/barChartResidency"
                    android:layout_gravity="center"
                    android:layout_width="300dp"
                    android:layout_height="200dp">

                </com.github.mikephil.charting.charts.BarChart>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutOwnership"
                android:background="@drawable/edittext_round"
                android:layout_below="@id/linearLayoutResidency"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="Ownership"
                    android:textColor="#fff"
                    android:textStyle="bold"/>

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/barChartOwnership"
                    android:layout_gravity="center"
                    android:layout_width="300dp"
                    android:layout_height="200dp">

                </com.github.mikephil.charting.charts.BarChart>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutFamily"
                android:background="@drawable/edittext_round"
                android:layout_below="@id/linearLayoutOwnership"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="Family Status"
                    android:textColor="#fff"
                    android:textStyle="bold"/>

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/barChartStatus"
                    android:layout_gravity="center"
                    android:layout_width="300dp"
                    android:layout_height="200dp">

                </com.github.mikephil.charting.charts.BarChart>

            </LinearLayout>

            <!--<android.support.design.widget.FloatingActionButton
                android:id="@+id/fabSurvey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|left"
                android:layout_margin="16dp"
                android:src="@mipmap/ic_add_white_24dp" />-->


            <LinearLayout
                android:id="@+id/linearLayoutPopulation"
                android:background="@drawable/edittext_round"
                android:layout_below="@id/linearLayoutFamily"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="Population"
                    android:textColor="#fff"
                    android:textStyle="bold"/>

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/pieChartPopulation"
                    android:layout_gravity="center"
                    android:layout_width="300dp"
                    android:layout_height="200dp">

                </com.github.mikephil.charting.charts.PieChart>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutVoters"
                android:background="@drawable/edittext_round"
                android:layout_below="@id/linearLayoutPopulation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/textViewTotalVoters"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="4"
                        android:text="0"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:textSize="50sp"
                        android:textAlignment="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:text="Total number of voters"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:textSize="13sp"
                        android:textAlignment="center"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutFamilyPlan"
                android:background="@drawable/edittext_round"
                android:layout_below="@id/linearLayoutVoters"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="No of family who applies family planning"
                    android:textColor="#fff"
                    android:textStyle="bold"/>

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/pieChartFamilyPlan"
                    android:layout_gravity="center"
                    android:layout_width="300dp"
                    android:layout_height="200dp">

                </com.github.mikephil.charting.charts.PieChart>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutTopFamilyPlan"
                android:background="@drawable/edittext_round"
                android:layout_below="@id/linearLayoutFamilyPlan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="Top family planning methods"
                    android:textColor="#fff"
                    android:textStyle="bold"/>

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/barChartTopFamilyPlan"
                    android:layout_gravity="center"
                    android:layout_width="300dp"
                    android:layout_height="200dp">

                </com.github.mikephil.charting.charts.BarChart>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearLayoutNoEatMeals"
                android:layout_below="@id/linearLayoutTopFamilyPlan"
                android:background="@drawable/edittext_round"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="No of family who eat complete meals everyday"
                    android:textColor="#fff"
                    android:textStyle="bold"/>

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/pieChartEatFamilyComplete"
                    android:layout_gravity="center"
                    android:layout_width="300dp"
                    android:layout_height="200dp">

                </com.github.mikephil.charting.charts.PieChart>

            </LinearLayout>


        </RelativeLayout>


